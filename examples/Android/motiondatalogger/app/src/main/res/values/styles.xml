<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/black</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:icon">@color/icons</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="android:textColor">@color/primary_text_dark_background</item>
        <item name="android:textColorSecondary">@color/secondary_text_dark_background</item>
        <item name="android:textColorHint">@color/hint_text_dark_background</item>
        <item name="colorAccent">@color/accent_fallback</item>
    </style>

    <style name="AppTheme.Dark.DarkStatusBar" parent="AppTheme.Dark">
        <item name="android:statusBarColor" tools:targetApi="21">@color/black</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

</resources>
